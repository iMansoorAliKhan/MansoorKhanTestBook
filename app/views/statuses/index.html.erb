<p id="notice"><%= notice %></p>
<div class="header">
  <h1>All of the Statuses</h1>
</div>
<%= link_to 'Add New Status', new_status_path, :class => 'btn btn-success' %>
<br />
<br />
<br />
<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.user.id %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago",status, :class => 'label label-primary' %>
    <span class="admin"> |
      <%= link_to "Edit", edit_status_path(status),  :class => 'label label-warning' %> |
      <%= link_to "Delete", status,  method: :delete, data: {confirm: "Are you sure you want to delete it?"} , :class => 'label label-danger'%>
    </span>
  </div>
</div>
<% end %>
